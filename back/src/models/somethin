model User {
  id          String @id
  name        String
  password    String
  email       String
  phoneNumber String
  role_id        Role_id
  role_array [Role_id]
}

model Owner {
  id          String  @id
  offers      Offer[]
}

model Admin {
    id String @id
}

model Offer {
  id              String       @id
  price           Decimal
  title           String
  offerType       OfferType
  propertyType    PropertyType
  status          OfferStatus
  addressLocation String
  addressNumber   Int
  addressStreet   String
  Owner           Owner        @relation(fields: [ownerId], references: [id])
  ownerId         String
}

enum OfferType {
  rent
  sell
}

enum PropertyType {
  small_house  @map("small house")
  mansion
  apartment
}

enum OfferStatus {
  approved
  pending
  rejected
  closed
}

enum Role {
  admin
  seller
  endUser
}